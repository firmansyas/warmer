  <% include ../partials/sidebar %>

<link rel="stylesheet" href="../stylesheets/metis/jquery.dataTables.min.css">
<div class="bg-dark dk" id="wrap">
  <!-- #menu -->
  <div id="content">
    <div class="outer">
      <div class="inner bg-light lter">
        <div class="row">
          <div class="col-lg-12">
            <div class="box">
              <header>
                <div class="icons"><i class="fa fa-table"></i></div>
                <h5>Data Kategori Barang</h5>
              </header>
              <div id="collapse4" class="body">
                <table id="dataTable" class="table table-bordered table-condensed table-hover table-striped">
                  <thead>
                    <tr>
                      <th class="text-center">Nomer</th>
                      <th class="text-center">Kode Barang</th>
                      <th class="text-center">Nama Kategori Barang</th>
                      <th class="text-center">Actions</th>
                    </tr>
                  </thead>
                  <tbody align="center">
                    <% if(k_barangData.length > 0) { %>
                      <% for(let i = 0; i < k_barangData.length; i++) { %>
                        <tr>
                          <td> <%= i+1 %></td>
                          <td> <%= k_barangData[i].kokbarang %></td>
                          <td> <%= k_barangData[i].nakabar %></td>
                          <td>
                            <a href='/k_barang/edit/<%= k_barangData[i].kbarangid %>' style="text-decoration: none">
                              <button class="btn btn-success" type="button" name="button">
                                edit
                              </button>
                            </a>
                            <a href='/k_barang/delete/<%= k_barangData[i].kbarangid %>' style="text-decoration: none">
                              <button class="btn btn-danger" type="button" name="button"
                              onclick="return confirm('Are you sure you want to delete this item?')">
                              Delete
                            </button>
                          </a>
                          <% } %>
                        </td>
                        <% } %>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="../javascripts/jquery.dataTables.min.js"></script>
  <script>
  $(document).ready(function(){
    $('#dataTable').DataTable();
  });
  </script>
