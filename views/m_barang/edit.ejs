<% include ../partials/header %>
<% include ../partials/menu %>
<% include ../partials/sidebar %>
<div class="bg-dark dk" id="wrap">
  <!-- #menu -->
  <div id="content">
    <div class="outer">
      <div class="inner bg-light lter">

        <div class="row">
          <div class="col-lg-12">
            <div class="box">
              <header>
                <div class="icons"><i class="fa fa-edit"></i></div>
                <h5>Edit Merk Barang</h5>
              </header>

              <div id="div-4" class="body">
                <form class="form-horizontal" method="POST" action="/m_barang/edit/<%= idURL%>">

                  <div class="form-group">
                    <label for="text1" class="control-label col-lg-2">Kode Merk Barang</label>
                    <div class="col-lg-9">
                      <input type="text" id="text1" placeholder="" name="kombarang" class="form-control" value="<%= m_barangData.kombarang %>">
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="text1" class="control-label col-lg-2">Nama Merk Barang</label>
                    <div class="col-lg-9">
                      <input type="text" id="text1" placeholder="" name="namebarang" class="form-control" value="<%= m_barangData.namebarang %>">
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="text1" class="control-label col-lg-2">Asal Negara</label>
                    <div class="col-lg-9">
                      <input type="text" id="text1" placeholder="" name="asalnegara" class="form-control" value="<%= m_barangData.asalnegara %>"/>
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="text1" class="control-label col-lg-2">Supplier</label>
                    <div class="col-lg-9">
                      <select id="supplier" class="form-control" name="supplier">
                        <option value="">Choose Supplier</option>
                        <% for(let x=0; x<supplierData.length; x++) {%>
                          <% if(m_barangData.supplierid === supplierData[x].supplierid) {%>
                            <option value="<%= supplierData[x].supplierid %>"><%= supplierData[x].nasup %></option>
                            <% } else {%>
                              <option value="<%= supplierData[x].supplierid %>"><%= supplierData[x].nasup %></option>
                              <% } %>
                              <% } %>
                            </select>
                          </div>
                        </div>


                        <div class="form-actions no-margin-bottom">
                          <label class="control-label col-lg-2"></label>
                          <input type="submit" value="Submit" class="btn btn-primary">
                          <a href="/m_barang" <button class="btn btn-danger" type="button" name="button">Cancel </a> </button>
                        </div>
                      </div>

                    </div>
                  </form>
                </div>

              </div>
            </div>
          </div>

        </div>
      </div>




      <% include ../partials/footer %>
