<% include ../partials/header %>
<% include ../partials/menu %>

<!-- samping -->
<div id="left">
  <div class="media user-media bg-dark dker">
    <div class="user-media-toggleHover">
      <span class="fa fa-user"></span>
    </div>

    <div class="user-wrapper bg-dark">
      <a class="user-link" href="">
        <img class="media-object img-thumbnail user-img" alt="User Picture" src="../../images/ikan.jpg" style="width:64px;height:64px;">
      </a>

      <div class="media-body">
        <h5 class="media-heading"><%= item.firstname + ' ' + item.lastname %></h5>
        <ul class="list-unstyled user-info">
          <li><a href=""> <%= item.privilege %></a></li>
          <li>Last Access : <br>
            <small><i class="fa fa-calendar"></i>&nbsp;<%= item.lastlogin %></small>
          </li>

        </ul>
      </div>
    </div>
  </div>
  <% include ../partials/sidebar %>
  
<link rel="stylesheet" href="../stylesheets/metis/jquery.dataTables.min.css">

<div class="bg-dark dk" id="wrap">
  <!-- #menu -->
  <div id="content">
    <div class="outer">
      <div class="inner bg-light lter">
        <div class="row">
          <div class="col-lg-12">
            <div class="box">
              <header>
                <div class="icons"><i class="fa fa-table"></i></div>
                <h5>Data Barang</h5>
              </header>
              <div id="collapse4" class="body">
                <table id="dataTable" class="table table-bordered table-condensed table-hover table-striped">
                  <thead>
                    <tr>
                      <th class="text-center">Nomer</th>
                      <th class="text-center">Kode Barang</th>
                      <th class="text-center">Nomor Izin Edar</th>
                      <th class="text-center">Nama Barang</th>
                      <th class="text-center">Supplier</th>
                      <th class="text-center">Asal Negara</th>
                      <th class="text-center">Kategori</th>
                      <th class="text-center">Merk</th>
                      <th class="text-center">Spesifikasi Khusus</th>
                      <th class="text-center">Harga Beli</th>
                      <th class="text-center">Stock Awal</th>
                      <th class="text-center">Current Stock</th>
                      <th class="text-center">Action</th>
                    </tr>
                  </thead>
                  <tbody align="center">
                    <% if(barangData.length > 0) { %>
                      <% for(let i = 0; i < barangData.length; i++) { %>
                        <tr>
                          <td> <%= i+1 %></td>
                          <td> <%= barangData[i].kobarang %> </td>
                          <td> <%= barangData[i].nomorizin %> </td>
                          <td> <%= barangData[i].nambar %> </td>
                          <td> <%= barangData[i].nasup %> </td>
                          <td> <%= barangData[i].asalnegara %> </td>
                          <td> <%= barangData[i].nakabar %> </td>
                          <td> <%= barangData[i].namebarang %> </td>
                          <td> <%= barangData[i].spk %> </td>
                          <td> <%= barangData[i].hbeli %> </td>
                          <td> <%= barangData[i].stockawal %> </td>
                          <td> <%= barangData[i].currentstock %> </td>
                          <td>
                            <a href='/barang/edit/<%= barangData[i].barangid %>' style="text-decoration: none">
                              <button class="btn btn-success btn-block" type="button" name="button">
                                Edit
                              </button>
                            </a>
                            <a href='/barang/details/<%= barangData[i].barangid %>' style="text-decoration: none">
                              <button class="btn btn-primary btn-block" type="button" name="button">
                                Details
                              </button>
                            </a>
                            <a href='/barang/delete/<%= barangData[i].barangid %>' style="text-decoration: none">
                              <button class="btn btn-danger btn-block" type="button" name="button"
                              onclick="return confirm('Are you sure you want to delete this item?')">
                              Delete
                            </button>
                          </a>
                          <% } %>
                        </td>
                        <% } %>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="../javascripts/jquery.dataTables.min.js"></script>
  <script>
  $(document).ready(function(){
    $('#dataTable').DataTable();
  });
  </script>

  <% include ../partials/footer %>
