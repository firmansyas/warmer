            <small><i class="fa fa-calendar"></i>&nbsp;<%= item.lastlogin %></small>
          </li>

        </ul>
      </div>
    </div>
  </div>
  <% include ../partials/sidebar %>

<div class="bg-dark dk" id="wrap">
  <!-- #menu -->
  <div id="content">
    <div class="outer">
      <div class="inner bg-light lter">

        <div class="row">
          <div class="col-lg-12">
            <div class="box">
              <header>
                <div class="icons"><i class="fa fa-edit"></i></div>
                <h5>Edit Data Barang</h5>
              </header>

              <div id="div-4" class="body">
                <form class="form-horizontal" method="POST" action="/barang/edit/<%= idURL %>">

                  <div class="form-group">
                    <label for="text1" class="control-label col-lg-2">Kode Barang</label>
                    <div class="col-lg-9">
                      <input type="text" id="text1" placeholder="" name="kobarang" class="form-control" value="<%= barangData.kobarang %>">
                    </div>
                  </div>


                  <div class="form-group">
                    <label for="text1" class="control-label col-lg-2">Nomer Izin Edar</label>
                    <div class="col-lg-9">
                      <input type="number" id="text1" placeholder="" name="nomorizin" class="form-control" value="<%= barangData.nomorizin %>">
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="text1" class="control-label col-lg-2">Nama Barang</label>
                    <div class="col-lg-9">
                      <input type="text" id="text1" placeholder="" name="nambar" class="form-control" value="<%= barangData.nambar %>">
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="text1" class="control-label col-lg-2">Supplier</label>
                    <div class="col-lg-9">
                      <select id="text1" class="form-control" name="supplier">
                        <option value="">Pilih Supplier</option>
                        <% for(let x=0; x<supplierData.length; x++) {%>
                          <option value="<%= supplierData[x].supplierid %>"><%= supplierData[x].nasup %></option>
                          <% } %>
                        </select>
                      </div>
                    </div>

                    <div class="form-group">
                      <label for="text1" class="control-label col-lg-2">Asal Negara</label>
                      <div class="col-lg-9">
                        <input type="text" id="text1" placeholder="" name="asalnegara" class="form-control" value="<%= barangData.asalnegara %>">
                      </div>
                    </div>

                    <div class="form-group">
                      <label for="text1" class="control-label col-lg-2">Kategori Barang</label>
                      <div class="col-lg-9">
                        <select id="text1" class="form-control" name="kbarang">
                          <option value="">Pilih Kategori</option>
                          <% for(let x=0; x<k_barangData.length; x++) {%>
                            <option value="<%= k_barangData[x].kbarangid %>"><%= k_barangData[x].nakabar %></option>
                            <% } %>
                          </select>
                        </div>
                      </div>


                      <div class="form-group">
                        <label for="text1" class="control-label col-lg-2">Merk Barang</label>
                        <div class="col-lg-9">
                          <select id="text1" class="form-control" name="mbarang">
                            <option value="">Pilih Merek</option>
                            <% for(let x=0; x<m_barangData.length; x++) {%>
                              <option value="<%= m_barangData[x].mbarangid %>"><%= m_barangData[x].namebarang %></option>
                              <% } %>
                            </select>
                          </div>
                        </div>

                        <div class="form-group">
                          <label for="text1" class="control-label col-lg-2">Spesifikasi Khusus</label>
                          <div class="col-lg-9">
                            <input type="text" id="text1" placeholder="" name="spk" class="form-control" value="<%= barangData.spk %>">
                          </div>
                        </div>

                        <div class="form-group">
                          <label for="text1" class="control-label col-lg-2">Harga Beli Barang (Rp)</label>
                          <div class="col-lg-9">
                            <input type="number" id="number_to_rp" placeholder="" name="hbeli" class="form-control" onkeyup="toRp()" value="<%= barangData.hbeli %>"/>
                          </div>
                        </div>

                        <div class="form-group">
                          <label for="text1" class="control-label col-lg-2">Stock Awal</label>
                          <div class="col-lg-9">
                            <input type="number" id="text1" placeholder="" name="stockawal" class="form-control" value="<%= barangData.stockawal %>" disabled>
                          </div>
                        </div>

                        <div class="form-group">
                          <label for="text1" class="control-label col-lg-2">Current Stock</label>
                          <div class="col-lg-9">
                            <input type="number" id="text1" placeholder="" name="pass" class="form-control" disabled>
                          </div>
                        </div>

                        <div class="form-actions no-margin-bottom">
                          <label class="control-label col-lg-2"></label>
                          <input type="submit" value="Submit" class="btn btn-primary">
                          <a href="/barang" <button class="btn btn-danger" type="button" name="button">Cancel </a> </button>
                        </div>
                      </div>

                    </div>
                  </form>
                </div>

              </div>
            </div>
          </div>

        </div>
      </div>

      <script type="text/javascript">
      function toRp(){

        var angka = $('#number_to_rp').val()
        if(angka.length>3)
        angka = toAngka(angka);
        console.log(angka);
        var rev     = parseInt(angka, 10).toString().split('').reverse().join('');
        var rev2    = ''

        for(var i = 0; i < rev.length; i++){
          rev2  += rev[i];
          if((i + 1) % 3 === 0 && i !== (rev.length - 1)){
            rev2 += '.';
          }
        }
        // $('#number_to_rp').val(rev2.split('').reverse().join(''))
        console.log(rev2.split('').reverse().join(''));
        return 'Rp. ' + rev2.split('').reverse().join('') + ',00';
      }

      function toAngka(rp){return parseInt(rp.replace(/,.*|\D/,''),10)}

      </script>

      <% include ../partials/footer %>
