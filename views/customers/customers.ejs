<% include ../partials/header %>
<% include ../partials/menu %>

<!-- samping -->
<div id="left">
  <div class="media user-media bg-dark dker">
    <div class="user-media-toggleHover">
      <span class="fa fa-user"></span>
    </div>

    <div class="user-wrapper bg-dark">
      <a class="user-link" href="">
        <img class="media-object img-thumbnail user-img" alt="User Picture" src="../../images/ikan.jpg" style="width:64px;height:64px;">
      </a>

      <div class="media-body">
        <h5 class="media-heading"><%= item.firstname + ' ' + item.lastname %></h5>
        <ul class="list-unstyled user-info">
          <li><a href=""> <%= item.privilege %></a></li>
          <li>Last Access : <br>
            <small><i class="fa fa-calendar"></i>&nbsp;<%= item.lastlogin %></small>
          </li>

        </ul>
      </div>
    </div>
  </div>
  <% include ../partials/sidebar %>
  
  <link rel="stylesheet" href="../stylesheets/metis/jquery.dataTables.min.css">
  <div class="bg-dark dk" id="wrap">
    <!-- #menu -->
    <div id="content">
      <div class="outer">
        <div class="inner bg-light lter">
          <div class="row">
            <div class="col-lg-12">
              <div class="box">
                <header>
                  <div class="icons"><i class="fa fa-table"></i></div>
                  <h5>Data Customers</h5>
                </header>
                <div id="collapse4" class="body">
                  <table id="dataTable" class="table table-bordered table-condensed table-hover table-striped">
                    <thead>
                      <tr>
                        <th class="text-center">Nomer</th>
                        <th class="text-center">Kode Customers</th>
                        <th class="text-center">Nama Perusahaan</th>
                        <th class="text-center">Nama Customers</th>
                        <th class="text-center">NPWP</th>
                        <th class="text-center">Alamat</th>
                        <th class="text-center">Daerah</th>
                        <th class="text-center">Kode Pos</th>
                        <th class="text-center">Email</th>
                        <th class="text-center">No Phone 1</th>
                        <th class="text-center">No Phone 2</th>
                        <th class="text-center">Action</th>
                      </tr>
                    </thead>
                    <tbody align="center">
                      <% if(customerData.length > 0) { %>
                        <% for(let i = 0; i < customerData.length; i++) { %>
                          <tr>
                            <td> <%= i+1 %></td>
                            <td> <%= customerData[i].kocus %> </td>
                            <td> <%= customerData[i].namap %> </td>
                            <td> <%= customerData[i].namcus %> </td>
                            <td> <%= customerData[i].npwp %> </td>
                            <td> <%= customerData[i].alamat %> </td>
                            <td> <%= customerData[i].daerah %> </td>
                            <td> <%= customerData[i].kodepos %> </td>
                            <td> <%= customerData[i].email %> </td>
                            <td> <%= customerData[i].npp %> </td>
                            <td> <%= customerData[i].npk %> </td>
                            <td>
                              <a href='/customers/edit/<%= customerData[i].customersid %>' style="text-decoration: none">
                                <button class="btn btn-success" type="button" name="button">
                                  edit
                                </button>
                              </a>
                              <a href='/customers/delete/<%= customerData[i].customersid %>' style="text-decoration: none">
                                <button class="btn btn-danger" type="button" name="button"
                                onclick="return confirm('Are you sure you want to delete this item?')">
                                Delete
                              </button>
                            </a>
                            <% } %>
                          </td>
                          <% } %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <script src="../javascripts/jquery.dataTables.min.js"></script>
      <script>
      $(document).ready(function(){
        $('#dataTable').DataTable();
      });
      </script>
      <% include ../partials/footer %>
