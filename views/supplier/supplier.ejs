<% include ../partials/header %>
<% include ../partials/menu %>
<% include ../partials/sidebar %>
<link rel="stylesheet" href="../stylesheets/metis/jquery.dataTables.min.css">
<div class="bg-dark dk" id="wrap">
  <!-- #menu -->
  <div id="content">
    <div class="outer">
      <div class="inner bg-light lter">
        <div class="row">
          <div class="col-lg-12">
            <div class="box">
              <header>
                <div class="icons"><i class="fa fa-table"></i></div>
                <h5>Data Supplier</h5>
              </header>
              <div id="collapse4" class="body">
                <table id="dataTable" class="table table-bordered table-condensed table-hover table-striped">
                  <thead>
                    <tr>
                      <th class="text-center">Nomer</th>
                      <th class="text-center">Kode Supplier</th>
                      <th class="text-center">Nama Supplier</th>
                      <th class="text-center">Nama Penanggung Jawab</th>
                      <th class="text-center">Alamat</th>
                      <th class="text-center">Asal Negara</th>
                      <th class="text-center">Email</th>
                      <th class="text-center">Contact Person</th>
                      <th class="text-center">Action</th>
                    </tr>
                  </thead>
                  <tbody align="center">
                    <% if(supplier.length > 0) { %>
                      <% for(let i = 0; i < supplier.length; i++) { %>
                        <tr>
                          <td> <%= i+1 %></td>
                          <td> <%= supplier[i].kosup%> </td>
                          <td> <%= supplier[i].nasup%> </td>
                          <td> <%= supplier[i].npj%> </td>
                          <td> <%= supplier[i].alamat%> </td>
                          <td> <%= supplier[i].asalnegara%> </td>
                          <td> <%= supplier[i].email%> </td>
                          <td> <%= supplier[i].cp%> </td>
                          <td>
                            <a href='/supplier/edit/<%= supplier[i].supplierid %>' style="text-decoration: none">
                              <button class="btn btn-success" type="button" name="button">
                                edit
                              </button>
                            </a>
                            <a href='/supplier/delete/<%= supplier[i].supplierid %>' style="text-decoration: none">
                              <button class="btn btn-danger" type="button" name="button"
                              onclick="return confirm('Are you sure you want to delete this item?')">
                              Delete
                            </button>
                          </a>
                          <% } %>
                        </td>
                        <% } %>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="../javascripts/jquery.dataTables.min.js"></script>
  <script>
  $(document).ready(function(){
    $('#dataTable').DataTable();
  });
  </script>
  <% include ../partials/footer %>
